.home
    .formwrapper
        = form_tag send_mail_path, method: 'POST', :class => 'reservationform clearfix' do
            .scrollable
                %h1 Request a room
                .name.fa-user= text_field_tag :name, nil, required: true, pattern: '^(?!\s*$).{2,100}$', minlength: 2, maxlength: 100, placeholder: 'Name', title: 'Name between 2 and 100 characters.', 'x-moz-errormessage' => 'Your name must not be blank.'
                .email.fa-envelope= email_field_tag :email, nil, required: true, pattern: '^[A-Za-z0-9_\-\.]+\@[A-Za-z0-9_\-\.]+\.[A-Za-z]{2,4}$', minlength: 6, maxlength: 100, placeholder: 'Email', title: 'name@domain.com (correct e-mail structure)', 'x-moz-errormessage' => 'You must provide a valid e-mail address.'
                .phone.fa-phone.left= telephone_field_tag :phone, nil, pattern: '^[\d\(\)\[\]\s\-\+\/\.]{5,}$', minlength: 5, maxlength: 20, data: {type: 'phone'}, placeholder: 'Phone Number', title: 'Phone number for direct contact between 5 and 20 digits.', 'x-moz-errormessage' => 'You must provide a valid phone number.'
                .mobile.fa-mobile.right= telephone_field_tag :mobile, nil, pattern: '^[\d\(\)\[\]\s\-\+\/\.]{5,}$', minlength: 8, maxlength: 20, data: {type: 'phone'}, placeholder: 'Mobile Phone', title: 'Mobile phone number between 8 and 20 digits.', 'x-moz-errormessage' => 'You must provide a valid mobile phone number.'
                .arrival.fa-calendar.left= text_field_tag :arrival, nil, required: true, data: {provide: 'datepicker', 'date-format' => 'yyyy-mm-dd'}, pattern: "#{@date_regex}", minlength: 10, maxlength: 10, placeholder: 'Arrival', title: 'YYYY-MM-DD (correct arrival date format)', 'x-moz-errormessage' => 'Please specify the date of your arrival (date format must be YYYY-MM-DD).'
                .departure.fa-calendar.right= text_field_tag :departure, nil, required: true, data: {provide: 'datepicker', 'date-format' => 'yyyy-mm-dd'}, pattern: "#{@date_regex}", minlength: 10, maxlength: 10, placeholder: 'Departure', title: 'YYYY-MM-DD (correct departure date format)', 'x-moz-errormessage' => 'Please specify the date of your departure (date format must be YYYY-MM-DD).'
                .adults.fa-male.left= number_field_tag :adults, nil, required: true, min: 1, max: 19, data: {type: 'numeric'}, pattern: '^(1[0-9]|[1-9])$', maxlength: 2, placeholder: 'Adults', title: 'Allowed number of adults for one reservation is between 1 and 19, no leading zeros.', 'x-moz-errormessage' => 'The number of adults for each reservation belong to the range 1 to 19, no leading zeros.'
                .children.fa-users.right= number_field_tag :children, nil, min: 0, max: 19, data: {type: 'numeric'}, pattern: '^([0-1][0-9]|[0-9])$', maxlength: 2, placeholder: 'Children', title: 'Allowed number of children for one reservation is between 0 and 19, no leading zeros.', 'x-moz-errormessage' => 'The provided number of children must belong to the range 0 to 19, no leading zeros.'
                .message.fa-pencil= text_area_tag :message, nil, pattern: '^(?!\s*$).{6,300}$', minlength: 6, maxlength: 300, placeholder: 'Additional Details', title: 'Additional details about your reservation between 6 and 300 characters.', 'x-moz-errormessage' => 'You must provide a comprehensible message.'
                = submit_tag 'Send your request', :class => 'btn btn-warning btn-lg pull-right'

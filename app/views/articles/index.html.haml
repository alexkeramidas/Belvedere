%h1 Listing articles
%table
  %thead
    %tr
      %th Title
      %th Description
      %th Visible
      %th Created at
      %th Last edit
      %th Article type
      %th
      %th
      %th
  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.description
        %td= article.visible
        %td= article.created_at
        %td= article.last_edit
        %td= article.article_type
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Article', new_article_path

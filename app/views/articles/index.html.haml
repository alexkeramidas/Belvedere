.articles
    %h1 Belvedere Hotel - News
    .wrapper
        .posts
            .scrollable
                - @articles.each do |article|
                    %h2= article.title
                    .post= sanitize(article.description, :tags => []).truncate(1000)
                    %details.date= article.created_at
                    %p.show= link_to 'Show', article
